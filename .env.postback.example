# ========================================================================
# S2S POSTBACK CONFIGURATION
# ========================================================================

# Секретный ключ для проверки подписей постбеков от 1Win (опционально)
# Если 1Win поддерживает HMAC-SHA256 подписи
POSTBACK_SECRET_KEY=your_secret_key_from_1win

# ========================================================================
# WEBHOOK CONFIGURATION
# ========================================================================

# Публичный URL вашего бота для постбеков
# Используется для документации и тестирования
WEBHOOK_URL=https://your-domain.com

# Порт для webhook endpoint (если используется отдельный сервер)
WEBHOOK_PORT=3000

# ========================================================================
# 1WIN INTEGRATION
# ========================================================================

# ID казино в 1Win (если требуется)
CASINO_ID=1win

# Аффилиатский ID в 1Win (для отслеживания)
AFFILIATE_ID=your_affiliate_id

# ========================================================================
# POSTBACK SETTINGS
# ========================================================================

# Включить обработку постбеков
ENABLE_POSTBACK=true

# Логировать все постбеки (для отладки)
DEBUG_POSTBACK=false

# Максимальное количество повторных попыток при ошибке
POSTBACK_RETRY_COUNT=3

# Интервал между повторными попытками (сек)
POSTBACK_RETRY_INTERVAL=5

# ========================================================================
# NOTIFICATION SETTINGS
# ========================================================================

# Отправлять ли уведомления о регистрациях
NOTIFY_REGISTRATION=true

# Отправлять ли уведомления о депозитах
NOTIFY_DEPOSIT=true

# Отправлять ли уведомления о выводах
NOTIFY_WITHDRAWAL=true

# Отправлять ли уведомления о выигрышах
NOTIFY_WIN=true

# Минимальный интервал между уведомлениями о выигрышах (сек)
# Чтобы не спамить пользователя
WIN_NOTIFICATION_INTERVAL=300

# ========================================================================
# ANALYTICS
# ========================================================================

# Логировать события в БД
LOG_POSTBACK_EVENTS=true

# Отправлять метрики в аналитику
SEND_ANALYTICS=true

# ========================================================================
# ПРИМЕРЫ ПОСТБЕК URL ДЛЯ 1WIN
# ========================================================================

# Регистрация:
# https://your-domain.com/postback/1win?event=registration&user_id={user_id}

# Депозит:
# https://your-domain.com/postback/1win?event=deposit&user_id={user_id}&amount={amount}

# Вывод:
# https://your-domain.com/postback/1win?event=withdrawal&user_id={user_id}&amount={amount}

# Выигрыш:
# https://your-domain.com/postback/1win?event=win&user_id={user_id}&amount={amount}
